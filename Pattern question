# 5th question 
#include<iostream>
using namespace std;
 int main(){
     
    int n; 
 
 int i=1;
 
 cin>> n;

 while(i<=n){
     int j=1;
     while(j<=n){
        // char ch='A'+i-1; 
        char ch='A'+j-1;
        cout<<ch;
         j=j+1;
         
     }
     cout<<endl;
     i=i+1;
 }
 }

OUTPUT:
4
AAAA
BBBB
CCCC
DDDD

output:

ABCD
ABCD
ABCD
ABCD


#6 question
#include<iostream>
using namespace std;

int main(){
    int n;
    int i=1;
    int count=1;
    
    cin>> n;
   
    while(i<=n){
        int j=1;
        while( j<=i){
            cout<<i-j+1<<" ";
            // count=count+1;
          
       j=j+1;
        }
        cout<<endl;
        
         i=i+1;
    }
     
}

>>>>>>
OUTPUT:
5
1 
2 1 
3 2 1 
4 3 2 1 
5 4 3 2 1 




#7 question
#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Enter the value of n: ";
    cin >> n;

 
    int i = 1;

    while (i <= n) {  // Loop for rows
        int j = 1;
        while (j <= n) {  // Loop for columns
           char ch = 'A'+i+j-2;  // Starting character(MAIN LOGIC)
            cout << ch<< " ";
            ch=ch+1;
            j=j+1;
        }
        cout << endl;
        i=i+1;
    }

    return 0;
}



>>>> 
OUTPUT:
A B C 
B C D 
C D E 

